import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.MouseEvent;

import javax.swing.*;

public class Game extends JFrame{
	
	public Game() {
		
		Container c = this.getContentPane();
		c.setLayout(null);
		
	    ImageIcon cimg  = new ImageIcon("charter.png");
	    JButton charter  = new JButton(cimg);
	    charter.setBounds(500,300, 200, 400);
	    add(charter);
	    charter.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				System.out.println("12345");
			}
		});
	    
	    ImageIcon bimg  = new ImageIcon("background.jpg");
	    JLabel background  = new JLabel(bimg);
	    background.setBounds(0, 0, 1200, 1000);
	    c.add(background);
	    
		setTitle("신과 함께");
		setSize(1200,1000);
		setResizable(false);
		setVisible(true);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);		
	}

	public static void main(String[] args) {
		new Game();
	}

}
